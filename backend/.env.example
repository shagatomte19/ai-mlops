# SentimentAI Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=SentimentAI
APP_VERSION=2.1.0
DEBUG=false

# Supabase PostgreSQL Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Security & Authentication
# IMPORTANT: Change this in production! Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis (optional - for caching)
# Leave empty to disable caching
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# CORS Origins (comma-separated for multiple)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-app.vercel.app

# ML Model Paths
MODEL_PATH=ml/models/sentiment_v2.pkl
VECTORIZER_PATH=ml/models/vectorizer_v2.pkl
MODEL_VERSION=v2.0

# MLflow Configuration
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=sentiment-analysis

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_ANONYMOUS=10/minute
RATE_LIMIT_AUTHENTICATED=100/minute
RATE_LIMIT_BATCH=5/hour

# Logging
# Set to true for JSON-formatted logs (production)
JSON_LOGS=false

